<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>

        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:windowDisablePreview">true</item>
    </style>


    <!--  == Start - Tablayout  for Login&SignUp == -->
    <style name="Base.Widget.Design.TabLayout.Login" parent="android:Widget">
        <item name="tabPaddingStart">@dimen/size_10</item>
        <item name="tabPaddingEnd">@dimen/size_10</item>
        <item name="tabIndicatorColor">@color/colorPrimary</item>
        <item name="tabIndicatorHeight">@dimen/size_2</item>  <!--cannot set width, need to do by programitically-->
        <item name="tabTextAppearance">@style/TabLayoutText</item>
        <item name="tabSelectedTextColor">@color/colorPrimary</item>
    </style>

    <style name="TabLayoutText" parent="TextAppearance.AppCompat.Button">
        <item name="android:textSize">@dimen/size_14</item>
        <item name="android:textColor">@color/blueTR40</item>
        <item name="textAllCaps">false</item>
    </style>

    <!--  == End - Tablayout  for Login&SignUp == -->


    <!-- Font Typeface -->
    <style name="fontsBold">
        <item name="fontPath">fonts/GOTHAMHTF-BOLD.OTF</item>
    </style>



</resources>
