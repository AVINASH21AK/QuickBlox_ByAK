<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingLeft="@dimen/size_30"
    android:paddingRight="@dimen/size_30">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:orientation="vertical">

        <EditText
            android:id="@+id/edtEmail"
            android:layout_width="match_parent"
            android:layout_height="@dimen/size_50"
            android:hint="@string/hintEmail"
            android:paddingLeft="@dimen/size_15"
            android:inputType="textEmailAddress"
            android:background="@drawable/xml_rect_white"

            android:textColor="@color/colorPrimary"
            android:textColorHint="@color/blueTR40"
            android:textSize="@dimen/size_16"
            android:singleLine="true"
            android:text="">
            <requestFocus />

        </EditText>



        <TextView
            android:id="@+id/tvSumbit"
            android:layout_width="match_parent"
            android:layout_height="@dimen/size_50"
            android:layout_marginTop="@dimen/size_35"
            android:background="@drawable/xml_rect_white"
            android:backgroundTint="@color/colorPrimary"
            android:textAllCaps="true"
            android:textAppearance="@style/fontsBold"
            android:text="@string/hintSubmit"
            android:textAlignment="gravity"
            android:gravity="center"
            android:textSize="@dimen/size_16"
            android:textColor="@color/white"/>

    </LinearLayout>




</RelativeLayout>
